{
  "name": "robot_photographer",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--privileged",
    "--network=host",
    "--ipc=host",
    "--gpus=all",
    "-e",
    "DISPLAY=${localEnv:DISPLAY}",
    "-e",
    "NVIDIA_VISIBLE_DEVICES=all",
    "-e",
    "NVIDIA_DRIVER_CAPABILITIES=all"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/robot_photographer,type=bind",
  "workspaceFolder": "/home/ubuntu/robot_photographer",
  "mounts": [
    "source=/etc/timezone,target=/etc/timezone,type=bind",
    "source=/etc/localtime,target=/etc/localtime,type=bind",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  "postStartCommand": "sudo apt update && sudo apt -y upgrade && bash -lc 'cd \"${containerWorkspaceFolder}\" && source /opt/ros/humble/setup.bash && rosdep install --from-path src -yi --rosdistro humble && colcon build --symlink-install'",
  "hostRequirements": {
    "gpu": true
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-toolsai.jupyter"]
    }
  }
}